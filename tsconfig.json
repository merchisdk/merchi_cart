{
  "compilerOptions": {
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "target": "ES5",
    "types": ["node", "jest", "react"],
    "module": "umd",
    "noEmit": true,
    "noImplicitAny": true,
    "declaration": true,
    "jsx": "react-jsx",
    "lib": ["es2015", "DOM", "ES5"],
    "moduleResolution": "node",
    "outDir": "./lib",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
  },
}
